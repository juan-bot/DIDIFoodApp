<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    tools:context=".ThirdFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="30dp"
            android:layout_height="24dp"
            android:layout_marginLeft="9dp"
            android:background="?attr/actionModeCloseDrawable" />
        <TextView
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DIDI Food"
            android:textColor="#000"
            android:paddingLeft="120dp"
            android:paddingTop="9dp"
            />

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/promo3" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="10dp">
        <ImageView
            android:layout_width="160dp"
            android:layout_height="117dp"
            android:background="@drawable/promo4" />
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            >
            <TextView
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tacos Tres Reyes"
                android:textColor="#000"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="4.4 $$$ Pizza/Hamburguesa"
                android:textColor="#000"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="50 Min   MX$26"
                android:textColor="#000"
                />

            <TextView
                android:layout_width="146dp"
                android:layout_height="18dp"
                android:layout_marginTop="10dp"

                android:text="Articulos con 50% OFF"
                android:textColor="#CA4508"
                android:background="#FDE5D4"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="420dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginTop="10dp"
            android:text="Fin de resultados"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginTop="20dp"
            android:text="----------Terminos y condiciones----------"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginTop="30dp"
            android:text="* Valido en ciudades y restaurantes participantes"
            android:gravity="center"
            />
    </LinearLayout>

</FrameLayout>