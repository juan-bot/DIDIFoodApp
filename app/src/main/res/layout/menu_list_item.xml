<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="370dp"
    android:layout_height="250dp"
    android:layout_marginTop="10dp"
    android:background="#FFFFFF"
    android:padding="16dp"
    android:layout_marginLeft="10dp"
    >
    <LinearLayout
        android:layout_width="210dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pizza grande peperoni"
            android:textColor="#000"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Salsa italiana, pezcla de quesos y peperoni"
            android:textColor="#000"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="MX$149.50"
            android:textColor="#000"
            android:textSize="22dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="ahorras MX$149.50 cada articulo"
            android:textSize="16dp"
            />

        <Button
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:text="Agregar"
            android:textColor="#FFFFFF"
            android:background="#FD8D43"/>
    </LinearLayout>
    <ImageView
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:background="@drawable/pizza"
        android:layout_gravity="right"
        />
</FrameLayout>